<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:shopclue="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <android.support.v4.view.ViewPager
        android:id="@+id/book_pager"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@android:color/black"
        android:minHeight="240dp"></android.support.v4.view.ViewPager>

    <in.shopclues.ui.widget.CirclePageIndicator android:id="@+id/circle_indicator"
        android:layout_width="match_parent"
        android:layout_below="@+id/book_pager"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="100dp"
        shopclue:fillColor="@color/splash_screen_color"
        shopclue:strokeColor="@color/splash_screen_color"
        android:background="@android:color/white"
        android:layout_height="20dp"
        shopclue:radius="5dp"
        android:padding="5dip"
        shopclue:strokeWidth="2dp"/>
</RelativeLayout>
